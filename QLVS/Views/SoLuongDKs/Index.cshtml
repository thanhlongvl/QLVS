@model PagedList.IPagedList<QLVS.Models.SoLuongDK>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Số lượng đăng kí";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2><b>Quản lí số lượng đăng kí</b></h2>

<br />

@using (Html.BeginForm("Index", "SoLuongDKs", FormMethod.Get))
{
    <p>
        Nhập mã đại lí: @Html.TextBox("searchString", ViewBag.CurrentFilter as string)
        <button type="submit"><i class="fa fa-search"></i></button>
    </p>
    <br />
}


@if (TempData["notice"] != null)
{
    if (TempData["notice"].ToString() == "Successfully create")
    {
        <div class="alert alert-success" role="alert">
            <strong>Thông báo! </strong>Thêm thông tin SL đăng kí vé số với mã: <b>@TempData["masl"] của @TempData["daily"] </b> thành công
        </div>
    }
    else
    if (TempData["notice"].ToString() == "Successfully edit")
    {
        <div class="alert alert-success" role="alert">
            <strong>Thông báo! </strong>Sửa thông tin SL đăng kí vé số với mã: <b>@TempData["masl"] của @TempData["daily"] </b> thành công
        </div>
    }
    else
    if (TempData["notice"].ToString() == "Successfully delete")
    {
        <div class="alert alert-success" role="alert">
            <strong>Thông báo! </strong>Xóa thông tin SL đăng kí vé số với mã: <b>@TempData["masl"] của @TempData["daily"] </b> thành công
        </div>
    }
    else if (TempData["notice"].ToString() == "Have result")
    {
        <div class="alert alert-info" role="alert">
            <strong>Tìm kiếm thành công! </strong>Có @TempData["dem"] kết quả trả về!
        </div>
    }
    else if (TempData["notice"].ToString() == "No result")
    {
        <div class="alert alert-danger" role="alert">
            <strong> Không có kết quả trả về!</strong>
        </div>
    }
}

<p>
    <button class="btn btn-info" onclick="location.href='@Url.Action("Create")';return false;">Tạo mới</button>&nbsp;&nbsp;&nbsp;&nbsp;
    <button class="btn btn-warning" onclick="location.href='@Url.Action("Index")';return false;">Tải lại</button>
</p>
<br />

<table class="table table-striped table-bordered table-hover" id="dataTables-example">
    <tr>
        <th>
            @Html.ActionLink("Mã số", "Index", new { sortOrder = ViewBag.IDSortParm })
        </th>

        <th>
            @Html.ActionLink("Tên đại lí", "Index", new { sortOrder = ViewBag.TenDaiLySortParm })
        </th>

        <th>
            @Html.ActionLink("Ngày đăng kí", "Index", new { sortOrder = ViewBag.NgayDKSortParm })
        </th>

        <th>
            @Html.ActionLink("Số lượng đăng kí", "Index", new { sortOrder = ViewBag.SldkSortParm })
        </th>

        <th style="text-align: center">Chức năng</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaiLy.TenDaiLy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongDK1)
            </td>

            <td align="center">
                <button class="btn btn-success" onclick="location.href='@Url.Action("Details",  new { id = item.ID })';return false;">Xem</button>&nbsp&nbsp&nbsp&nbsp
                <button class="btn btn-primary" onclick="location.href='@Url.Action("Edit",  new { id = item.ID})';return false;">Sửa</button>&nbsp&nbsp&nbsp&nbsp
                <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete",  new { id = item.ID })';return false;">Xóa</button>&nbsp&nbsp&nbsp&nbsp
            </td>
        </tr>
    }

</table>

Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) của
@Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index",
new
{
    page,
    sortOrder = ViewBag.CurrentSort,
    currentFilter =
ViewBag.CurrentFilter
}))
