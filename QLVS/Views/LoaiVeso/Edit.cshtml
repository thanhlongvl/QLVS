@model QLVS.Models.LoaiVeso

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sửa thông tin</h2>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <h4>Loại vé số</h4>

    @if (TempData["notice"] != null)
    {
        if (TempData["notice"].ToString() == "Failed edit")
        {
            <div class="alert alert-danger" role="alert">
                <strong>Thông báo! </strong>Loại vé số: <b>@TempData["maloaiveso"]</b> đã tồn tại trong hệ thống! Vui lòng thử lại!
            </div>
        }
    }

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaLoaiVeSo)
    @Html.HiddenFor(model => model.Flag)

    <div class="form-group">
        @Html.LabelFor(model => model.MaLoaiVeSo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MaLoaiVeSo, new { htmlAttributes = new { @class = "form-control", @style = "width:40%", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.MaLoaiVeSo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Tinh, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tinh, new { htmlAttributes = new { @class = "form-control", @style = "width:40%" } })
            @Html.ValidationMessageFor(model => model.Tinh, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    <button class="btn btn-default" onclick="location.href='@Url.Action("Index")';return false;"><b>Trở lại</b></button>&nbsp&nbsp&nbsp&nbsp
</div>
