@model IEnumerable<QLVS.Models.DaiLy>

@{
    ViewBag.Title = "Đại lí";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2><b>Quản lí đại lý</b></h2>

<br />

@if (TempData["notice"] != null)
{
    if (TempData["notice"].ToString() == "Successfully create")
    {
        <div class="alert alert-success" role="alert">
            <strong>Thông báo! </strong>Thêm thông tin đại lý: <b>@TempData["tendaily"]</b> thành công
        </div>
    }
    else
    if (TempData["notice"].ToString() == "Successfully edit")
    {
        <div class="alert alert-success" role="alert">
            <strong>Thông báo! </strong>Sửa thông tin đại lý: Mã số <b> @TempData["madaily"], tên @TempData["tendaily"] </b> thành công
</div>
    }
    else
    if (TempData["notice"].ToString() == "Successfully delete")
    {
        <div class="alert alert-success" role="alert">
            <strong>Thông báo! </strong>Xóa thông tin đại lý: Mã số  <b> @TempData["madaily"], tên @TempData["tendaily"] </b> thành công
        </div>
    }
}

<p>
    <button class="btn btn-info" onclick="location.href='@Url.Action("Create")';return false;">Tạo mới</button>&nbsp;&nbsp;&nbsp;&nbsp;
    <button class="btn btn-warning" onclick="location.href='@Url.Action("Index")';return false;">Tải lại</button>
</p>
<br />
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Loại vé số</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.MaDaiLy)</th>
                                    <th>@Html.DisplayNameFor(model => model.TenDaiLy)</th>
                                    <th>@Html.DisplayNameFor(model => model.DiaChi)</th>
                                    <th>@Html.DisplayNameFor(model => model.SDT)</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.MaDaiLy)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TenDaiLy)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                                        <td>@Html.DisplayFor(modelItem => item.SDT)</td>
                                        <td align="center">
                                            <button class="btn btn-success" onclick="location.href='@Url.Action("Details",  new { id = item.MaDaiLy })';return false;">Xem</button>&nbsp&nbsp&nbsp&nbsp
                                            <button class="btn btn-primary" onclick="location.href='@Url.Action("Edit",  new { id = item.MaDaiLy})';return false;">Sửa</button>&nbsp&nbsp&nbsp&nbsp
                                            <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete",  new { id = item.MaDaiLy })';return false;">Xóa</button>&nbsp&nbsp&nbsp&nbsp
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->
@section Plugin1{
    <link rel="stylesheet" href="~/assets/css/lib/datatable/dataTables.bootstrap.min.css">
}
@section Plugin2{
    <script src="~/assets/js/lib/data-table/datatables.min.js"></script>
    <script src="~/assets/js/lib/data-table/dataTables.bootstrap.min.js"></script>
    <script src="~/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
    <script src="~/assets/js/lib/data-table/buttons.bootstrap.min.js"></script>
    <script src="~/assets/js/lib/data-table/jszip.min.js"></script>
    <script src="~/assets/js/lib/data-table/pdfmake.min.js"></script>
    <script src="~/assets/js/lib/data-table/vfs_fonts.js"></script>
    <script src="~/assets/js/lib/data-table/buttons.html5.min.js"></script>
    <script src="~/assets/js/lib/data-table/buttons.print.min.js"></script>
    <script src="~/assets/js/lib/data-table/buttons.colVis.min.js"></script>
    <script src="~/assets/js/lib/data-table/datatables-init.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#bootstrap-data-table-export').DataTable();
        });
    </script>
}
